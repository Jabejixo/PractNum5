<Window x:Class="BUHALOVO.CreateTypeWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BUHALOVO"
        mc:Ignorable="d"
        Title="CreateTypeWin" Height="200" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="60"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="1" Text="Введите тип добавляемой записи" TextAlignment="Center" Margin="0,20,0,20"></TextBlock>
        <TextBox x:Name="TypeNoteTBox" Grid.Row="1" Grid.ColumnSpan="3" Margin="10"></TextBox>
        <Button x:Name="CreateNewType" Grid.Column="1" Grid.Row="2" Content="Добавить новый тип" Click="CreateNewType_Click"></Button>
    </Grid>
</Window>
